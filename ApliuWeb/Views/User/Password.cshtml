@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "忘记密码";
}
<link rel="stylesheet" href="/Earliest/css/common.css">
<link rel="stylesheet" href="/Earliest/css/app.css">
<link rel="stylesheet" href="/CssStyle/User/login.css">

<div class="register">
    <div class="regTop">
        <span>忘记密码</span>
        <a class="back" href="Login">&lt;&nbsp;返回</a>
    </div>
    <div class="content">
        <div class="point">
            <img src="/images/logo/logorect.png" alt=""  style="width:70%;"/>
        </div>
        <form action="javascript:void(0);" onsubmit="return registercheck()">
            <div class="message">
                <input type="tel" id="phone" placeholder="输入手机号" />
                <input type="text" id="code" placeholder="输入验证码" />
                <input type="password" id="password" placeholder="请输入3-18位密码" />
                <input type="password" id="passwordag" placeholder="请再次输入密码" />
                <div class="icons">
                    <b>
                        <img src="/Images/Icon/zc-1.jpg" alt="" /></b>
                    <b>
                        <img src="/Images/Icon/zc-2.jpg" alt="" /></b>
                    <b>
                        <img src="/Images/Icon/zc-3.jpg" alt="" /></b>
                    <b>
                        <img src="/Images/Icon/zc-3.jpg" alt="" /></b>
                </div>
                <a class="codechange" href="javascript:void(0);" id="getsmscode">获取验证码</a>
            </div>
            <div class="agree">
                <span>&nbsp;通过短信验证码找回密码&nbsp;</span>
            </div>
            <button class="submit" type="submit">确认修改</button>
        </form>
    </div>
</div>
<script src="/JsScript/User/login.js"></script>
